<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp">
        <!--1-->
        <Button
            android:id="@+id/buenosdias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:backgroundTint="@color/teal_200"
            android:textAlignment="center"
            android:text="Buenos Dias"
            android:onClick="Diklik"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1"
            tools:ignore="RtlCompat" />
        <!--2-->
        <Button
            android:id="@+id/adios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:textAlignment="center"
            android:backgroundTint="#FF5722"
            android:text="Adios"
            android:onClick="Diklik"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1"
            tools:ignore="RtlCompat"/>
        <!--3-->
        <Button
            android:id="@+id/porfavor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:backgroundTint="@color/teal_200"
            android:textAlignment="center"
            android:text="Por Favor"
            android:onClick="Diklik"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1"
            tools:ignore="RtlCompat"/>
        <!--4-->
        <Button
            android:id="@+id/denada"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:backgroundTint="#FF5722"
            android:textAlignment="center"
            android:text="De Nada"
            android:onClick="Diklik"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1"
            tools:ignore="RtlCompat"/>
        <!--5-->
        <Button
            android:id="@+id/comoestausted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:backgroundTint="#009688"
            android:textAlignment="center"
            android:text="¿Cómo está usted?"
            android:onClick="Diklik"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1"
            tools:ignore="RtlCompat"/>
        <!--6-->
        <Button
            android:id="@+id/perdon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:textAlignment="center"
            android:backgroundTint="#AE4E2F"
            android:text="Perdon"
            android:onClick="Diklik"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1"
            tools:ignore="RtlCompat"/>
        <!--7-->
        <Button
            android:id="@+id/muchasgracias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:backgroundTint="#009688"
            android:textAlignment="center"
            android:text="Mucha Gracias"
            android:onClick="Diklik"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1"
            tools:ignore="RtlCompat"/>
        <!--8-->
        <Button
            android:id="@+id/hastalavista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:textAlignment="center"
            android:backgroundTint="#AE4E2F"
            android:text="Hasta La Vista"
            android:onClick="Diklik"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1"
            tools:ignore="RtlCompat"/>

    </androidx.gridlayout.widget.GridLayout>
</RelativeLayout>